{
  "type": "object",
  "description": "LandmarkLayer",
  "title": "ILandmarkLayer",
  "additionalProperties": false,
  "required": ["zoom", "extent"],
  "properties": {
    "content": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "image": {
          "type": "string",
          "description": "Link to image for the story"
        },
        "markdown": {
          "type": "string",
          "description": "Markdown string representing the content of the story stop"
        }
      }
    },
    "zoom": {
      "type": "number",
      "default": 0
    },
    "extent": {
      "type": "array",
      "default": null,
      "items": {
        "type": "number"
      }
    }
  }
}
