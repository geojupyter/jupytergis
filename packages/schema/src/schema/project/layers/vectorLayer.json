{
  "type": "object",
  "description": "VectorLayer",
  "title": "IVectorLayer",
  "required": ["source"],
  "additionalProperties": false,
  "properties": {
    "source": {
      "type": "string",
      "description": "The id of the source"
    },
    "color": {
      "type": "object",
      "description": "The color of the the object",
      "default": {}
    },
    "opacity": {
      "type": "number",
      "description": "The opacity of the the object",
      "default": 1,
      "multipleOf": 0.1,
      "minimum": 0,
      "maximum": 1
    },
    "symbologyState": {
      "type": "object",
      "description": "The state of the symbology panel options",
      "required": ["renderType"],
      "properties": {
        "renderType": {
          "type": "string",
          "enum": ["Single Symbol", "Graduated", "Categorized"],
          "default": "Single Symbol"
        },
        "value": {
          "type": "string",
          "default": ""
        },
        "method": {
          "type": "string",
          "enum": ["color", "radius"],
          "default": "color"
        },
        "colorRamp": {
          "type": "string",
          "default": "viridis"
        },
        "nClasses": {
          "type": "number",
          "default": 9.0
        },
        "reverse": {
          "type": "boolean",
          "default": false
        },
        "mode": {
          "type": "string",
          "default": "equal interval",
          "enum": [
            "quantile",
            "equal interval",
            "jenks",
            "pretty",
            "logarithmic"
          ]
        }
      },
      "additionalProperties": false,
      "default": {
        "renderType": "Single Symbol",
        "value": "",
        "method": "color",
        "colorRamp": "viridis",
        "nClasses": "9",
        "mode": "equal interval"
      }
    }
  }
}
